@using WebApp
@model List<Product>

@{
    ViewData["Title"] = "Product List";
}

<h1> Product List </h1>

@if(Model != null) {
    <table class = "table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                </tr>
            </tbody>
        }

    </table>
}